<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#02CFE6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/TeamText"
            android:text="Team 1"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <ImageView
            android:id="@+id/decreaseTeam1"
            style="@style/MinusButtons"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:onClick="decreaseScore"
            tools:ignore="ContentDescription,UsingOnClickInXml,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/score_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="#fff"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <ImageView
            android:id="@+id/increaseTeam1"
            style="@style/PlusButtons"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:onClick="increaseScore"
            tools:ignore="ContentDescription,RtlHardcoded,UsingOnClickInXml,SpeakableTextPresentCheck" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/TeamText"
            android:text="Team 2"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <ImageView
            android:id="@+id/decreaseTeam2"
            style="@style/MinusButtons"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="decreaseScore"
            tools:ignore="ContentDescription,RtlHardcoded,UsingOnClickInXml,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/score_2"
            style="@style/ScoreText"
            android:text="0"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <ImageView
            android:id="@+id/increaseTeam2"
            style="@style/PlusButtons"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:onClick="increaseScore"
            tools:ignore="ContentDescription,RtlHardcoded,UsingOnClickInXml,SpeakableTextPresentCheck" />

    </RelativeLayout>

</LinearLayout>